<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/data2SendEditText"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:layout_above="@+id/connectPythonBut"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/inserttext"
        android:fontFamily="sans-serif-medium"
        android:maxLines="15"
        android:padding="20dp"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/replyMessageTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.736"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.432" />

    <TextView

        android:id="@+id/replyMessageTextView"
        android:layout_width="368dp"
        android:layout_height="180dp"
        android:layout_below="@id/connectPythonBut"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:layout_marginBottom="32dp"
        android:adjustViewBounds="true"
        android:background="@drawable/radius"
        android:gravity="center"
        android:maxLines="10"
        android:padding="15dp"
        android:scrollbars="vertical"
        android:text="Categ;\nSummary"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/connectPythonBut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent" />

    <Button

        android:id="@+id/connectPythonBut"
        android:layout_width="411dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="Send To server"
        android:textSize="20dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Android-NLP Project\n"
        android:textSize="25dp"
        android:textStyle="bold|italic"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>